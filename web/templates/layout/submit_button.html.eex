<div class="form-group row">
  <div class="offset-sm-4 col-sm-8 offset-md-3 col-md-9 offset-lg-3 col-lg-9">
    <% attrs = [class: "btn btn-primary"] %>
    <% attrs = if Map.has_key?(assigns, :disabled) && assigns.disabled, do: Keyword.put(attrs, :disabled, true), else: attrs %>
    <%= submit Map.get(assigns, :label, gettext("submit")), attrs %>
  </div>
</div>
